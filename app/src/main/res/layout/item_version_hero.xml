<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="132dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_is_own"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/tv_hero_desc"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        tools:text="Q伤害提升" />

    <TextView
        android:id="@+id/tv_hero_nickname"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginBottom="9dp"
        tools:text="佐伊"
        android:gravity="center"
        android:layout_above="@id/tv_hero_desc" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_hero_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:civ_border_color="@color/circle_image_border"
        app:civ_border_width="@dimen/circle_image_border"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_hero_nickname" />


</RelativeLayout>