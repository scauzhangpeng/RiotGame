<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="132dp"
    android:layout_marginLeft="8dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_hero_skin"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_hero_logo"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentBottom="true"
        app:civ_border_color="@color/colorMainGold"
        app:civ_border_width="1dp"
        android:layout_width="27dp"
        android:layout_height="27dp" />

    <TextView
        android:id="@+id/iv_hero_skin_desc"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_toRightOf="@id/iv_hero_logo"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        tools:text="伊芙丽"
        android:textSize="12sp"
        android:textColor="@color/colorMainGold"
        android:layout_alignParentRight="true" />

</RelativeLayout>