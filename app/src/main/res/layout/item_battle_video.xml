<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="132dp"
              android:background="@color/colorMainBg"
              android:layout_height="142dp"
              android:layout_marginLeft="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_battle_video_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_news_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_flag"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"
            android:layout_gravity="top|left"/>

        <TextView
            android:id="@+id/tv_video_len"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"
            android:layout_gravity="top|right"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/golden_play_icon"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:background="@color/bg_aphla"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_publication_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSubText"
                android:textSize="12.0sp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/tv_pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainGold"
                android:textSize="12.0sp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16.0sp"
        android:textColor="@color/colorMainText"
        android:layout_marginTop="6dp"
        android:ellipsize="end"/>
</LinearLayout>