<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_video_commentator"
        style="@style/video_top_menu"
        android:drawableLeft="@drawable/video_entry_commentator"
        android:text="解说"/>

    <TextView
        android:id="@+id/tv_video_match"
        style="@style/video_top_menu"
        android:drawableLeft="@drawable/video_entry_match"
        android:text="赛事"/>

    <TextView
        android:id="@+id/tv_video_funny"
        style="@style/video_top_menu"
        android:drawableLeft="@drawable/video_entry_funny"
        android:text="娱乐"/>

    <TextView
        android:id="@+id/tv_video_hero"
        style="@style/video_top_menu"
        android:drawableLeft="@drawable/video_entry_hero"
        android:text="英雄"/>

</LinearLayout>