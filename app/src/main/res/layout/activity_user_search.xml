<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorMainBg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar_default"/>

    <RelativeLayout
        android:background="@android:color/white"
        android:id="@+id/rl_recently_play_with"
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <ImageView
            android:id="@+id/icon_recently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/users_recently_play_with"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近游戏的人"
            android:layout_marginLeft="14dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/icon_recently"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right_dark"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:id="@+id/rl_user_nearby"
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <ImageView
            android:id="@+id/icon_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/users_nearby"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近玩家"
            android:layout_marginLeft="14dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/icon_nearby"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right_dark"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>