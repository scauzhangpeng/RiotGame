<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:switch_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/colorMainBg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/activity_toolbar"/>

    <org.scau.riotgame.widget.SettingSwitchView
        android:id="@+id/switch_game_cache"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        switch_view:check="true"
        switch_view:main_text="游戏资料缓存"
        switch_view:sub_text=""/>

    <org.scau.riotgame.widget.SettingSwitchView
        android:id="@+id/switch_picture_cache"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        switch_view:check="true"
        switch_view:main_text="图片缓存"
        switch_view:sub_text=""/>

    <org.scau.riotgame.widget.SettingSwitchView
        android:id="@+id/switch_app_cache"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        switch_view:check="true"
        switch_view:main_text="应用缓存"
        switch_view:sub_text=""/>

    <org.scau.riotgame.widget.SettingSwitchView
        android:id="@+id/switch_video_cache"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        switch_view:check="true"
        switch_view:main_text="视频缓存"
        switch_view:sub_text=""
        switch_view:line_visible="GONE"/>

    <Button
        android:id="@+id/btn_confirm_clear"
        android:layout_marginTop="40dp"
        android:text="确定"
        style="@style/btn_red"/>

</LinearLayout>