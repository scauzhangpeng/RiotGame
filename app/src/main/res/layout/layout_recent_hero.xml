<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
    android:layout_height="144dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_change_hero_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/newver_focus_icon"
            android:layout_marginLeft="8dp"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:textColor="@color/colorMainText"
            android:text="我的英雄圈" />

        <TextView
            android:id="@+id/tv_change_hero_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorSubText"
            android:text="最近在玩" />

        <TextView
            android:id="@+id/tv_change_hero_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorMainGold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recent_hero"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>