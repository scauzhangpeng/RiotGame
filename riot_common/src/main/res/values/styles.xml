<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 是否布局延伸到状态栏  -->
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <!-- 菜单字体颜色 -->
        <item name="android:actionMenuTextColor">@color/colorMainGold</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="RecyclerView_item">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/item_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/item_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/item_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/item_horizontal_margin</item>
    </style>

</resources>
